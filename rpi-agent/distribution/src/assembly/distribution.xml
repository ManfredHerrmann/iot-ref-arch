<assembly>
    <id>distribution-archive</id>
    <formats>
        <format>tar.gz</format>
        <format>tar.bz2</format>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>target/distro-contents</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>home</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>**/*.sh</include>
            </includes>
            <fileMode>755</fileMode>
        </fileSet>
        <fileSet>
            <directory>{basedir}/../core/main/native</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>**/*.so</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>